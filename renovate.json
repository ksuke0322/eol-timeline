{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["* * * * 0,5,6"],
  "timezone": "Asia/Tokyo",
  "requiredStatusChecks": true,
  "dependencyDashboard": false,
  "automerge": true,
  "rebaseWhen": "never",
  "branchConcurrentLimit": 1,
  "prHourlyLimit": 0,
  "labels": ["dependencies", "renovate"],
  "packageRules": [
    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "devDeps (non-major)"
    },
    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchPackagePatterns": ["eslint"],
      "groupName": "devDeps - eslint (non-major)"
    },
    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchPackagePatterns": ["storybook"],
      "groupName": "devDeps - storybook (non-major)"
    },

    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major"],
      "groupName": "devDeps (major)"
    },
    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major"],
      "matchPackagePatterns": ["eslint"],
      "groupName": "devDeps - eslint (major)"
    },
    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major"],
      "matchPackagePatterns": ["storybook"],
      "groupName": "devDeps - storybook (major)"
    },

    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "deps (non-major)"
    },

    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["major"]
    }
  ]
}
