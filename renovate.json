{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["every 4 hours"],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": false,
  "automerge": true,
  "platformAutomerge": true,
  "rebaseWhen": "never",
  "branchConcurrentLimit": 1,
  "prHourlyLimit": 0,
  "labels": ["dependencies", "renovate"],
  "packageRules": [
    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "devDeps (non-major)",
      "automerge": true
    },
    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchPackagePatterns": ["eslint"],
      "groupName": "devDeps - eslint (non-major)",
      "automerge": true
    },
    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchPackagePatterns": ["storybook"],
      "groupName": "devDeps - storybook (non-major)",
      "automerge": true
    },

    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major"],
      "groupName": "devDeps (major)",
      "automerge": false
    },
    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major"],
      "matchPackagePatterns": ["eslint"],
      "groupName": "devDeps - eslint (major)",
      "automerge": false
    },
    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major"],
      "matchPackagePatterns": ["storybook"],
      "groupName": "devDeps - storybook (major)",
      "automerge": false
    },

    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "deps (non-major)",
      "automerge": true
    },

    {
      "matchManagers": ["pnpm"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}
